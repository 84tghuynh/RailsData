<h2 class="h2 text-primary">List of All Authors</h2>

<div class="container pb-5">
  <div class="row">
    <div class="col">
      <%= pagy_bootstrap_nav(@pagy).sub('class="pagination"', 'class="pagination  justify-content-end"').html_safe  %>
    </div>
  </div>

  <div class="row rounded text-white bg-primary font-weight-bold text-uppercase py-2">
    <div class="col-1">
      No
    </div>
    <div class="col-2">
      Cover
    </div>
    <div class="col-3">
      Name
    </div>
    <div class="col-4">
      Authors
    </div>
  </div>



<% @authors.each do |author| %>
      <div class="row border-bottom border-secondary py-2">
        <div class="col-1 text-justify">
          <%=author.id %>
        </div>
        <div class="col-2 text-justify">
          <% if author.cover_s != '' %>
            <%=link_to image_tag(author.cover_s, class: "img-fluid rounded", alt:"Cover Small Image") , author %>
          <% else %>
            <%=link_to image_tag("no_image.png", size: "60", class: "img-fluid rounded", alt:"No Image") , author %>
          <% end %>
        </div>
        <div class="col-3 text-justify">
          <%=link_to author.name, author ,class:"text-success" %>
        </div>
        <div class="col-4 text-justify">
          <% author.books.each_with_index do |book, i| %>
              <% if i == 0 %>
                  <%= link_to book.title, book ,class:"text-success" %>
              <% else %>
                  , <%= link_to book.title, book ,class:"text-success" %>
              <% end %>
          <% end %>
        </div>
    </div>
  <%end%>







  <div class="row pt-3">
    <div class="col">
      <%= pagy_bootstrap_nav(@pagy).sub('class="pagination"', 'class="pagination  justify-content-end"').html_safe  %>
    </div>
  </div>
</div>

