<h2 class="h2 text-primary">Books Library</h2>
<div class="container pb-5">
  <div class="row ">
    <div class="col">
      <ol class="list-group">
          <li class="list-group-item active font-weight-bold text-uppercase">First 10 Books</li>
          <% @books.each do |book| %>
            <li class="list-group-item">
                <%= link_to book.title, book ,class:"text-dark" %>
            </li>
          <% end %>
           <li class="list-group-item">
                 <%= link_to 'All Books', books_path, class:"nav-link active font-weight-bold text-uppercase" %>
           </li>
      </ol>
    </div>

    <div class="col">
        <ol class="list-group">
          <li class="list-group-item active font-weight-bold text-uppercase">First 10 Authors</li>
          <% @authors.each do |author| %>
            <li class="list-group-item">
                <%= link_to author.name, author ,class:"text-dark" %>
            </li>
          <% end %>
          <li class="list-group-item">
              <%= link_to 'All Authors', authors_path, class:"nav-link active font-weight-bold text-uppercase" %>
          </li>
      </ol>
    </div>
    <div class="col">
        <ol class="list-group">
          <li class="list-group-item active font-weight-bold text-uppercase">First 10 Customers</li>
          <% @customers.each do |customer| %>
            <li class="list-group-item">
                <%= link_to customer.name, customer ,class:"text-dark" %>
            </li>
          <% end %>
          <li class="list-group-item">
              <%= link_to 'All Customer', customers_path, class:"nav-link active font-weight-bold text-uppercase" %>
          </li>
      </ol>
    </div>

     <div class="col">
        <ol class="list-group">
          <li class="list-group-item active font-weight-bold text-uppercase">All Caterogies</li>
          <% @categories.each do |category| %>
            <li class="list-group-item">
                <%= link_to category.name, category ,class:"text-dark" %>
            </li>
          <% end %>
          <li class="list-group-item">
              <%= link_to 'All Categories', categories_path, class:"nav-link active font-weight-bold text-uppercase" %>
          </li>
        </ol>
    </div>
  </div>
</div>

