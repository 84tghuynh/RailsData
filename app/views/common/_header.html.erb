<nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <div class="navbar-brand">Rails Data</div>
  <div class="navbar-nav">
      <%= link_to 'Home', root_path, class:"nav-link active font-weight-bold text-uppercase" %>
      <%= link_to 'About Data', home_about_data_path, class:"nav-link active font-weight-bold text-uppercase" %>
      <%= link_to 'Books', books_path, class:"nav-link active font-weight-bold text-uppercase" %>
      <%= link_to 'Authors', authors_path, class:"nav-link active font-weight-bold text-uppercase" %>
  </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent"></div>


  <%= form_with(url: search_books_path, method: "get", local: true, class: "form-inline") do %>
        <%= text_field_tag(:keywords, nil, class: "form-control mr-sm-2", placeholder: "Search Books" ) %>
        <div class="input-group">
            <select class="custom-select" id="categorySelect" name="category">
              <option value="0">All</option>
              <%= options_from_collection_for_select(Category.all, :id, :name) %>
            </select>
            <div class="input-group-append">
              <label class="input-group-text" for="categorySelect">Categories</label>
            </div>
        </div>
        <%= submit_tag("Search",class:"btn btn-success my-2 ml-2 my-sm-0") %>
  <% end %>

</nav>
