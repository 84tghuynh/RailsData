<h2 class="h2 text-primary">List of All Customers</h2>

<div class="container pb-5">
  <div class="row">
    <div class="col">
      <%= pagy_bootstrap_nav(@pagy).sub('class="pagination"', 'class="pagination  justify-content-end"').html_safe  %>
    </div>
  </div>
  <div class="row rounded text-white bg-primary font-weight-bold text-uppercase py-2">
    <div class="col-1">
      No
    </div>
    <div class="col-2">
      Name
    </div>
    <div class="col-3">
      Street Address
    </div>
    <div class="col-6">
      Retal Books
    </div>
  </div>



<% @customers.each do |customer| %>
      <div class="row border-bottom border-secondary py-2">
        <div class="col-1 text-justify">
          <%=customer.id %>
        </div>
        <div class="col-2 text-justify">
          <%=customer.name %>
        </div>

        <div class="col-3 text-justify">
          <%=customer.street_address %>, <%=customer.country%>
        </div>

        <div class="col-6 text-justify">
          <% customer.books.each_with_index do |book, i| %>
              <% if i == 0 %>
                  <%= link_to book.title, book ,class:"text-success" %>
              <% else %>
                  , <%= link_to book.title, book ,class:"text-success" %>
              <% end %>
          <% end %>
        </div>
    </div>
  <%end%>


  <div class="row pt-3">
    <div class="col">
      <%= pagy_bootstrap_nav(@pagy).sub('class="pagination"', 'class="pagination  justify-content-end"').html_safe  %>
    </div>
  </div>
</div>

